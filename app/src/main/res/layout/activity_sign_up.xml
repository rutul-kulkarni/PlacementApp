<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_color_selector"
    tools:context=".SignUpActivity"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="40dp">

            <EditText
                android:id="@+id/firstNameEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:ems="10"
                android:hint="First Name"
                android:inputType="textPersonName"
                 />
            <EditText
                android:id="@+id/lastNameEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:ems="10"
                android:hint="Last Name"
                android:inputType="textPersonName"
                />
            <EditText
                android:id="@+id/emailIdEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:ems="10"
                android:hint="@string/emailEdit"
                android:inputType="textEmailAddress"
                />
            <EditText
                android:id="@+id/passwordEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:ems="10"
                android:hint="Password"
                android:inputType="textPassword"
                />
            <EditText
                android:id="@+id/phoneNumberEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:ems="10"
                android:hint="Mobile Number"
                android:inputType="phone"
                />
            <EditText
                android:id="@+id/prnEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Prn Number"
                android:inputType="number"
                />

            <EditText
                android:id="@+id/sscMarksEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="SSC Marks"
                android:inputType="numberDecimal"
                />
            <EditText
                android:id="@+id/hscMarksEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="HSC Marks"
                android:inputType="numberDecimal"
                />
            <EditText
                android:id="@+id/diplomaMarksEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Diploma Marks"
                android:inputType="numberDecimal"
                />
            <EditText
                android:id="@+id/currentCgpaEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Current CGPA"
                android:inputType="numberDecimal"
                />
            <EditText
                android:id="@+id/activeBacklog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Active Backlogs(if no then enter 0)"
                android:inputType="number"
                />
            <EditText
                android:id="@+id/yearGap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Year Gap(if no then enter 0)"
                android:inputType="number"
                />

            <Button
                android:id="@+id/signUpButton"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:background="@color/white"
                />

            <TextView
                android:id="@+id/loginReturnTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/returnToLoginTextView"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                />
        </LinearLayout>

    </ScrollView>

</RelativeLayout>